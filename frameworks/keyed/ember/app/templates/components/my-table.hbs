<div class="jumbotron">
  <div class="row">
    <div class="col-md-6">
      <h1>Ember v3.11.1</h1>
    </div>
    <div class="col-md-6">
      <div class="row">
        <div class="col-sm-6 smallpad">
          <BsButton id="run" @onClick={{action this.create}}>
            Create 1,000 rows
          </BsButton>
        </div>
        <div class="col-sm-6 smallpad">
          <BsButton id="runlots" @onClick={{action this.runLots}}>
            Create 10,000 rows
          </BsButton>
        </div>
        <div class="col-sm-6 smallpad">
          <BsButton id="add" @onClick={{action this.add}}>
            Append 1,000 rows
          </BsButton>
        </div>
        <div class="col-sm-6 smallpad">
          <BsButton id="update" @onClick={{action this.update}}>
            Update every 10th row
          </BsButton>
        </div>
        <div class="col-sm-6 smallpad">
          <BsButton id="clear" @onClick={{action this.clear}}>
            Clear
          </BsButton>
        </div>
        <div class="col-sm-6 smallpad">
          <BsButton id="swaprows" @onClick={{action this.swapRows}}>
            Swap Rows
          </BsButton>
        </div>
      </div>
    </div>
  </div>
</div>


{{#if this.data.length}}
  {{#performant-each tagName="table" class="table table-hover table-striped test-data" internalTag="tbody" items=this.data key="@id" as |item|}}
    <TableRow @item={{item}} @onSelect={{action this.select item.id}} @onRemove={{action this.remove item.id}} />
  {{/performant-each}}
{{/if}}


<span class="preloadicon glyphicon glyphicon-remove" aria-hidden="true"></span>